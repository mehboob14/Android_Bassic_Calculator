<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

        <EditText
            android:id="@+id/input"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:hint=""
            android:inputType="number"
            android:padding="16dp"
            android:textSize="28sp"
            android:background="@drawable/edit_text_background"

            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:id="@+id/button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/log"
                    style="@style/SmallButton"
                    android:textSize="20sp"
                    android:text="log" />
                <Button
                    android:id="@+id/sqrt"
                    style="@style/SmallButton"
                    android:textSize="20sp"
                    android:text="sqr"
                    />
                <Button
                    android:id="@+id/tan"
                    style="@style/SmallButton"
                    android:textSize="20sp"
                    android:text="tan" />
                <Button
                    android:id="@+id/cos"
                    style="@style/SmallButton"
                    android:textSize="20sp"
                    android:text="cos" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/clear"
                    style="@style/CalculatorButton"
                    android:textSize="30sp"
                    android:text="Ac" />
                <Button
                    android:id="@+id/pow"
                    style="@style/CalculatorButton"
                    android:textSize="30sp"
                    android:text="^" />


                <Button
                    android:id="@+id/divide"
                    style="@style/CalculatorButton"
                    android:textSize="30sp"
                    android:text="/" />


                <Button
                    android:id="@+id/multiply"
                    style="@style/CalculatorButton"
                    android:textSize="30sp"
                    android:text="*" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/seven"
                    style="@style/CalculatorButton"
                    android:textSize="30sp"
                    android:text="7" />

                <Button
                    android:id="@+id/eight"
                    style="@style/CalculatorButton"
                    android:textSize="30sp"
                    android:text="8" />

                <Button
                    android:id="@+id/nine"
                    style="@style/CalculatorButton"
                    android:textSize="30sp"
                    android:text="9" />


                <Button
                    android:id="@+id/subtract"
                    style="@style/CalculatorButton"
                    android:textSize="30sp"
                    android:text="-" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">


                <Button
                    android:id="@+id/four"
                    style="@style/CalculatorButton"
                    android:textSize="30sp"
                    android:text="4" />

                <Button
                    android:id="@+id/five"
                    style="@style/CalculatorButton"
                    android:textSize="30sp"
                    android:text="5" />


                <Button
                    android:id="@+id/six"
                    style="@style/CalculatorButton"
                    android:textSize="30sp"
                    android:text="6" />



                <Button
                    android:id="@+id/add"
                    style="@style/CalculatorButton"
                    android:textSize="30sp"
                    android:text="+" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/one"
                    style="@style/CalculatorButton"
                    android:textSize="30sp"
                    android:text="1" />





                <Button
                    android:id="@+id/two"
                    style="@style/CalculatorButton"
                    android:textSize="30sp"
                    android:text="2" />
                <Button
                    android:id="@+id/three"
                    style="@style/CalculatorButton"
                    android:textSize="30sp"
                    android:text="3" />


                <Button
                    android:id="@+id/zero"
                    style="@style/CalculatorButton"
                    android:textSize="30sp"
                    android:text="0" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/equal"
                    style="@style/EqualButton"
                    android:textSize="60sp"
                    android:text="=" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
